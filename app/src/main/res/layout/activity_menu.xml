<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no.hioa.sudokuapp.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="@color/menu_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/new_game"
            android:textColor="@color/white"
            android:id="@+id/new_game_button"
            android:onClick="onNewGameClick"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/create_sudoku"
            android:textColor="@color/white"
            android:id="@+id/create_game_button"
            android:onClick="onCreateGameClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules"
            android:textColor="@color/white"
            android:id="@+id/rules_button"
            android:onClick="onRulesClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:id="@+id/settings_button"
            android:onClick="onSettingsClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit_game"
            android:textColor="@color/white"
            android:id="@+id/exit_button"
            android:onClick="onExitClick"/>
    </LinearLayout>

</RelativeLayout>
